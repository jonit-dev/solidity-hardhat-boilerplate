    "eslint": "^9.3.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.22.4",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^5.0.1",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": "^5.4.5"
  }
