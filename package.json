  "license": "MIT",
  "scripts": {
    "compile": "hardhat compile && yarn typechain",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "typechain": "hardhat typechain",
    "verify": "hardhat verify",
    "task:accounts": "hardhat accounts",
    "clean": "hardhat clean",
    "console": "hardhat console",
    "deploy:simple": "hardhat run scripts/deploy.ts",
    "deploy": "npx hardhat ignition deploy",
    "format": "prettier --write --log-level silent '**/*.sol' '**/*.ts'",
    "lint:ts": "eslint . --ext .ts",
